<!-- payment.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ชำระค่าเช่าและค่าบริการ</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="d-flex">
        <!-- Left Navbar -->
        <%- include('menu') %>
        <!-- Main Content -->
        <div class="container mt-5" id="main-content">
            <h1 class="text-center">ชำระค่าเช่าและค่าบริการ</h1>
            <p class="text-center">ผู้เช่าสามารถทำรายการชำระเงินค่าเช่าและค่าบริการผ่านระบบ</p>
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Payment ID</th>
                        <th>Contract ID</th>
                        <th>Amount</th>
                        <th>Payment Date</th>
                        <th>Electricity Bill</th>
                        <th>Water Bill</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (payments.length === 0) { %>
                        <tr>
                            <td colspan="8" class="text-center">ไม่พบข้อมูลการชำระเงิน</td>
                        </tr>
                    <% } else { %>
                        <% payments.forEach(payment => { %>
                        <tr>
                            <td><%= payment.payment_id %></td>
                            <td><%= payment.contract_id %></td>
                            <td><%= payment.amount.toFixed(2) %></td>
                            <td><%= payment.payment_date %></td>
                            <td><%= payment.electricity_bill.toFixed(2) %></td>
                            <td><%= payment.water_bill.toFixed(2) %></td>
                            <td>
                                <% if (payment.status === 'Pending') { %>
                                    <span class="badge bg-warning text-dark">Pending</span>
                                <% } else { %>
                                    <span class="badge bg-success">Completed</span>
                                <% } %>
                            </td>
                            <td>
                                <% if (payment.status === 'Pending') { %>
                                    <a href="/pay/<%= payment.payment_id %>" class="btn btn-primary btn-sm">ชำระเงิน</a>
                                <% } else { %>
                                    <span class="badge bg-success">Completed</span>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
